<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="netstatPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistence</provider>
    <non-jta-data-source>java:/comp/env/jdbc/netstat</non-jta-data-source>
    <!-- Class mapping -->
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <class>ru.gooamoko.model.DailyTraffic</class>
    <class>ru.gooamoko.model.Traffic</class>
    <class>ru.gooamoko.model.Department</class>
    <class>ru.gooamoko.model.Host</class>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <!-- <property name="javax.persistence.schema-generation.database.action" value="none" /> -->
    </properties>
  </persistence-unit>

</persistence>